@model LabourCommissioner.Abstraction.DataModels.EmailModel

<html>
<head>
    <title></title>
</head>
<body>
    <table width="700" border="0" cellspacing="0" cellpadding="0" style="background-color: #ffffff;
        font-family: Verdana, Arial, Tahoma; margin: 0 auto; font-size: 11px; border: 1px solid #CCC;">
        <tr>
            <td style="padding-left: 10px;padding-top:5px;">
                <img height="60" alt="BOCWWB" src="https://enirmanbocw.gujarat.gov.in/assets/images/emailLogo.png" border="0" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <table width="100%">
                    <tr>
                        <td colspan="2" style="padding: 10px;">
                            <table width="100%" border="0" cellspacing="0" cellpadding="5" style="font-size: 12px; background-color: #fcfcfc; border: 1px solid #CCC;">
                                <tr>
                                    <td>
                                        <p style="padding-left: 10px;">
                                            <b>પ્રતિ @Html.DisplayNameFor(model => model.DisplayName),</b>
                                        </p>
                                        <p style="padding-left: 10px;">
                                            તમારું UserID અને Password નીચે મુજબ છે:
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 7px 0 10px 10px;">
                                        <table width="500" cellspacing="0" cellpadding="4" style="border: 1px solid #ccc; font-size: 12px; font-weight: normal;">
                                            <tr>
                                                <th width="110" align="left" style="border-right: 1px solid #ccc;border-bottom: 1px solid #ccc;">
                                                    UserID :
                                                </th>
                                                <td width="400" height="35" style="border-bottom: 1px solid #ccc;padding-left: 5px;">
                                                    @Html.DisplayNameFor(model => model.UserId)
                                                </td>
                                            </tr>
                                            <tr>
                                                <th align="left" style="border-right: 1px solid #ccc;">
                                                    Password :
                                                </th>
                                                <td height="35" style="padding-left: 5px;">
                                                    @Html.DisplayNameFor(model => model.Password)
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <p style="padding-left: 10px;">
                                            <b>આભાર સહ,</b>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="left">
                                        <p style="padding-left: 10px; margin: 0;">
                                            <b>
                                                ગુજરાત મકાન અને અન્‍ય બાંધકામ શ્રમયોગી કલ્‍યાણ બોર્ડ <br />
                                                <!--શ્રમભવન કમ્પાઉન્ડ, ગન હાઉસની બાજુમાં રુસ્તમ કામા રોડ, ખાનપુર,<br />
                                                અમદાવાદ, ગુજરાત-->
                                            </b>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="center">
                                        <p style="padding-left: 5px;color: #ff0000;">
                                            <small> This is an autogenerated e-mail. Please do not reply to this mail. </small>
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr style="background:#17a2b8;">
            <td align="center" colspan="2" style="padding:10px; color: #fefefe;">
                <b> © Copyrights 2021 BOCWWB All rights reserved. </b>
            </td>
        </tr>
    </table>
</body>
</html>